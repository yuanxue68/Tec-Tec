<div>
  <div class="title text-center">
    <i class="fa fa-envelope"></i> My Inbox
  </div>
  </br>
  <div class="col-md-4 col-md-offset-1" id="conversations">
    <div class="text-center">
      <span><i class="fa fa-user"></i> My Conversations</span>
    </div>
    </br> 
    <div class="row center-text">
      <%= will_paginate @conversations, param_name:"conversation_page", renderer: BootstrapPagination::Rails %>
    </div>
   
    <div>
      <% if @conversations.any? %>
        <%= render @conversations %>
      <% else %>
        No Conversations Yet ...
      <% end %>
    </div>
  </div>

  <div class="col-md-7" id="messages">
     <div class="row center-text">
      <%= will_paginate @messages, param_name:"message_page", renderer: BootstrapPagination::Rails %>
    </div>
    <% if @messages && @messages.any? %>
      <% @messages.each do |message| %>
        <%=render partial: "conversations/message", locals: {message:  message} %>
      <% end %>
    <% else %>
      ...
    <% end %>
  </div>
</div>
