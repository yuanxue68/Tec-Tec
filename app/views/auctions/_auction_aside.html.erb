<div class="col-md-3">

  <%= render partial:'shared/profile_pic', locals:{resource: @auction.owner} %>  

  <div class="info-box">
    <%= link_to user_path(@auction.owner) do %>
      <h3><%=@auction.owner.display_name.capitalize%></h3>
    <% end %> 
    <div class="light-text">
      <i class="fa fa-user"></i> Owner
    </div>    
  </div>
      
  <div class="info-box">
    <h3><%= @auction.starting_price%></h3>
    <div class="light-text">
      <i class="fa fa-usd"></i> Starting Price
    </div>
  </div>
  <div class="info-box">
    <h3><%= @auction.buyout_price%></h3>
    <div class="light-text">
      <i class="fa fa-money"></i> Buyout Price
    </div>
  </div>
  <div class="info-box">
    <h3><%= time_ago_in_words @auction.start_time%></h3>
    <div class="light-text">
      <i class="fa fa-history"></i> Time Passed
    </div>
  </div>
  <div class="info-box">
    <h3><%= distance_of_time_in_words_to_now @auction.end_time%></h3>
    <div class="light-text">
      <i class="fa fa-clock-o"></i> Time Remaining
    </div>
  </div>

  <% if current_user %>
    <%=link_to new_auction_bid_path(@auction), class:"btn btn-success col-md-12" do %>
      <i class="fa fa-check-circle"></i> Place Bid
    <% end %>
  <% end %>
</div>
